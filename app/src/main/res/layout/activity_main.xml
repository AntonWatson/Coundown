<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="@string/begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/beginButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.27"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/countdown_text"/>
    <Button
            android:text="@string/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resetButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.729"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/countdown_text"/>
    <TextView
            android:text="10:00"
            android:textSize="80dp"
            android:layout_width="229dp"
            android:layout_height="130dp"
            android:id="@+id/countdown_text" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="103dp"
            android:layout_height="46dp"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/edit_text_inputs"
            android:hint="@string/minutes"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="204dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.414"
            android:text="" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/countdown_text"/>
    <Button
            android:text="@string/set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setTextBtn"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="64dp"
            android:layout_marginRight="64dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.326"
            app:layout_constraintStart_toEndOf="@+id/edit_text_inputs" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>
</android.support.constraint.ConstraintLayout>